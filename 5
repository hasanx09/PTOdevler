deger = int(input("Bir değer girin: "))
secim = input("TEK'leri mi ÇİFT'leri mi toplamak istersiniz? (TEK/ÇİFT): ").upper()

toplam = 0

if secim == "TEK":
    for i in range(1, deger+1, 2):
        toplam += i
elif secim == "ÇİFT":
    for i in range(2, deger+1, 2):
        toplam += i
else:
    print("Geçersiz seçim!")
    quit()

print("Toplam =", toplam)
