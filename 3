using System;

class AnaProgram
{
    static void Main()
    {
        int toplam = 0;
        int girilenDeger;

        while (true)
        {
            Console.Write("Değer girin: ");
            string girilenMetin = Console.ReadLine();

            if (int.TryParse(girilenMetin, out girilenDeger))
            {
                toplam += girilenDeger;
            }

            if (girilenDeger == 83)
            {
                break;
            }
        }

        Console.WriteLine($"Girilen değerlerin toplamı: {toplam - 83}");
        Console.ReadLine();
    }
}
