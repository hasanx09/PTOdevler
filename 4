using System;

class AnaProgram
{
    static void Main()
    {
        Console.Write("Birinci değeri girin: ");
        int deger1 = Convert.ToInt32(Console.ReadLine());

        Console.Write("İkinci değeri girin: ");
        int deger2 = Convert.ToInt32(Console.ReadLine());

        Console.Write("Tek değerleri mi Çift değerleri mi toplamak istersin: ");
        string secim = Console.ReadLine().ToUpper();

        int toplam = 0;

        for (int a = deger1; a <= deger2; a++)
        {
            if (secim == "TEK" && a % 2 != 0)
            {
                toplam += a;
            }
            else if (secim == "ÇİFT" && a % 2 == 0)
            {
                toplam += a;
            }
        }

        Console.WriteLine($"{deger1} ile {deger2} arasındaki {secim} değerlerin toplamı: {toplam}");
        Console.ReadLine();
    }
}
